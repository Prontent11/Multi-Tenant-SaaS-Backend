generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
}

model SuperAdmin {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
}

model Organization {
  id        Int                 @id @default(autoincrement())
  name      String
  status    OrgStatus           @default(ACTIVE)
  createdAt DateTime            @default(now())
  users     User[]
  admins    OrganizationAdmin[]
}

model OrganizationAdmin {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  passwordHash   String
  isActive       Boolean      @default(true)
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId], map: "OrganizationAdmin_organizationId_fkey")
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  passwordHash   String
  isActive       Boolean      @default(true)
  role           OrgRole
  createdAt      DateTime     @default(now())
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
}

enum OrgRole {
  ADMIN
  MANAGER
  USER
}

enum OrgStatus {
  ACTIVE
  DISABLED
}
